<%- include('layouts/layout') %>

<h1 class="text-center text-2xl font-semibold">Login</h1>
<form action="/login" method="POST" class="max-w-md mx-auto mt-4 p-4 bg-white shadow rounded">
  <div class="mb-4">
    <label for="username" class="block text-sm">Username</label>
    <input type="text" name="username" id="username" required class="w-full p-2 mt-1 border border-gray-300 rounded">
  </div>
  <div class="mb-4">
    <label for="password" class="block text-sm">Password</label>
    <input type="password" name="password" id="password" required class="w-full p-2 mt-1 border border-gray-300 rounded">
  </div>
  <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded">Login</button>
  <p class="mt-4 text-center">
    Don't have an account? <a href="/register" class="text-blue-500">Register</a>
  </p>
</form>
<% if (message) { %>
  <p class="text-center text-red-500 mt-4"><%= message %></p>
<% } %>

